     <script>
        function filtrar (){
        const div_esconder = document.getElementById('continentes')
        if (div_esconder.style.display ==="block" ){
            div_esconder.style.display ="none"
        }else{
            div_esconder.style.display ="block"
        }
        }
    </script>
